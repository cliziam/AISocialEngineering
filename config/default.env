# Configurazione Social Engineering Research Tool
# Copia questo file in .env e modifica i valori secondo le tue necessità

# === OLLAMA CONFIGURATION ===
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.3:70b
# Timeout in secondi - IMPORTANTE: aumenta per modelli grandi o in CPU
# - Modelli piccoli (8B): 120s è sufficiente
# - Modelli medi (30B) in CPU: almeno 600s (10 minuti)
# - Modelli grandi (70B) in CPU: almeno 1200s (20 minuti)
# - Modelli molto grandi (120B) in CPU: almeno 1800s (30 minuti)
OLLAMA_TIMEOUT=1200
OLLAMA_MAX_RETRIES=3

# === WHATSAPP CONFIGURATION ===
WHATSAPP_SESSION_PATH=./data/whatsapp_session
WHATSAPP_TIMEOUT=60
WHATSAPP_QR_TIMEOUT=300

# === WEB SEARCH CONFIGURATION ===
SEARCH_ENGINE=duckduckgo
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=15
RATE_LIMIT_DELAY=1

# === HARDWARE CONFIGURATION ===
GPU_ENABLED=true
MAX_MEMORY_USAGE=80
CPU_THREADS=12
AUTO_OPTIMIZE=true

# === FILE MANAGEMENT ===
OUTPUT_DIR=./data/output
BACKUP_DIR=./data/backups
LOG_DIR=./logs
AUTO_BACKUP=true
CLEANUP_DAYS=30

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# === SECURITY ===
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
SANITIZE_OUTPUT=true

# === DEVELOPMENT ===
DEBUG=false
TEST_MODE=false
VERBOSE=false
